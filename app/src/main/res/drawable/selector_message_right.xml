<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="15dp"
                ></corners>
            <!-- 设置透明背景色 -->
            <solid android:color="@color/green" />

            <stroke
                android:width="1px"
                android:color="@color/green" />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="15dp"
                ></corners>
            <!-- 设置透明背景色 -->
            <solid android:color="#2ba763" />

            <stroke
                android:width="2px"
                android:color="#2ba763" />
        </shape>
    </item>
</selector>